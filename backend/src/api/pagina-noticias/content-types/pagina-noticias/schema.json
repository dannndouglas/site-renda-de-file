{
  "kind": "singleType",
  "collectionName": "pagina_noticias",
  "info": {
    "singularName": "pagina-noticias",
    "pluralName": "paginas-noticias",
    "displayName": "Página Notícias",
    "description": "Conteúdo da página de notícias e eventos"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo_pagina": {
      "type": "string",
      "default": "Notícias e Eventos",
      "required": true
    },
    "subtitulo_pagina": {
      "type": "string",
      "default": "Fique por dentro das novidades e eventos da Renda de Filé"
    },
    "imagem_fundo_cabecalho": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "posicao_imagem_fundo": {
      "type": "enumeration",
      "enum": [
        "Centro",
        "Centro Superior",
        "Centro Inferior",
        "Esquerda Centro",
        "Direita Centro",
        "Esquerda Superior",
        "Direita Superior",
        "Esquerda Inferior",
        "Direita Inferior"
      ],
      "default": "Centro",
      "required": false
    },
    "opacidade_overlay": {
      "type": "enumeration",
      "enum": [
        "Sem Overlay (0%)",
        "Overlay Leve (25%)",
        "Overlay Médio (50%)",
        "Overlay Forte (75%)",
        "Overlay Intenso (100%)"
      ],
      "default": "Sem Overlay (0%)",
      "required": false
    },
    "conteudo_introducao": {
      "type": "blocks",
      "required": false
    }
  }
}
